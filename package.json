    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@hono/oauth-providers": "0.4.0",
    "@hono/zod-validator": "^0.2.2",
    "@tabler/core": "^1.0.0-beta20",
    "axios": "^1.7.7",
    "croner": "^8.1.1",
    "date-fns": "^3.6.0",
    "echarts": "^5.5.1",
    "hono": "^4.5.11",
    "hono-sessions": "^0.5.8",
