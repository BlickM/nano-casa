{
  "name": "nano-casa",
  "version": "2.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "bundle": "ng build --source-map=true; source-map-explorer ./dist/nano-casa/main.*.js",
    "postbuild": "bun run purgecss.js",
